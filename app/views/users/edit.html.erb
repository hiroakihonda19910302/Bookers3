<section class="slice slice-lg sct-color-1">
	
	<% if @user.errors.any? %>
	<div id="error_explanation">
		<h3><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h3>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
  	<% end %>

	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<div class="form-user">
					<div class="form-header text-left">
						<h2 class="form-header-title">User info</h2>
					</div>
					<div class="form-body">
						<%= form_for(@user) do |f| %>
						<div class="form-inline">
							<div class="form-group">
								<label class="control-label">Name</label>
								<%= f.text_field :name, autofocus: true, class:"form-control" %>
							</div>
							<div class="form-group">
								<label class="control-label">Image</label>
                          		<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
                        	</div>
                        	<div class="form-group">
								<label class="control-label">Introduction</label>
                          		<%= f.text_area :introduction, autofocus: true, class:"form-control", rows:"3" %>
                        	</div>
                        	<%= f.submit "Update User", class:"btn btn-default btn-md" %>
                      	<% end %>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>