<section class="sct-color-1 slice">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="container-fluid text-left">
    <div class="row content">
      <div class="col-sm-3 sidenav">
        <div class="">
          <h2>User Info</h2>
          <p>ここにプロフィール画像</p>
          <hr>
          <p>name <%= @user.name %></p>
          <hr>
          <p>introduction <%= @user.introduction %></p>
          <button type="button" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
        </div>

        <div class="">
          <h2>New book</h2>
          <%= form_for(@book) do |f| %>
              <div class="form-group">
                <label class="control-label">Title</label>
                <%= f.text_field :title, class:"form-control" %>
              </div>
              <div class="form-group">
                <label class="control-label">Opinion</label>
                <%= f.text_area :body, class:"form-control", rows:"3" %>
              </div>
                <%= f.submit "Create Book", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
          <% end %>
        </div>
      </div>

      <!-- ↓ -->
      <div class="col-sm-9 text-left">
        <h2>Books</h2>
          <table class="table">
            <thead>
              <tr>
                <th>プロフィール画像</th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>

            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>ここにプロフィール画像</td>
                  <td><%= book.title %></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- ↑ -->

    </div>
  </div>
</section>

