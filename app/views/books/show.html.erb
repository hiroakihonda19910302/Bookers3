<section class="sct-color-1 slice">

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <!-- ↓ -->
  <% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <% end %>
  <!-- ↑ -->
  
  <div class="container-fluid text-left">
    <div class="row content">
      <div class="col-sm-2 sidenav">
        <div class="">
          <h2>User Info</h2>
          <p>ここにプロフィール画像</p>
          <hr>
          <p>name <%= @user.name %></p>
          <hr>
          <p>introduction <%= @user.introduction %></p>
          <button type="button" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
        </div>

        <div class="">
          <h2>New book</h2>
          <%= form_for(@book) do |f| %>
            <% if @book.errors.any? %>
              <div id="error_explanation">
                <h3><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
                  <ul>
                    <% @book.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
              </div>
            <% end %>

              <div class="form-group">
                <label class="control-label">Title</label>
                <%= f.text_field :title, class:"form-control" %>
              </div>
              <div class="form-group">
                <label class="control-label">Opinion</label>
                <%= f.text_area :body, class:"form-control", rows:"3" %>
              </div>
                <%= f.submit "Create Book", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
          <% end %>
        </div>
      </div>

      <!-- ↓ -->
      <div class="col-sm-10 text-left">
        <div class="well">
          <h2>Book detail</h2>
          <hr>
        </div>
        <div class="row">
          <div class="col-sm-2">
            <div class="well">
              <p>ここに画像</p>
              <p><%= link_to "Name", user_path(@user.id) %></p>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="well">
              <%= @book.title %>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="well">
              <%= @book.body %>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="well">
              <%= link_to "Edit", edit_book_path, class: "btn btn-success", 'aria-hidden' => true %>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="well">
              <%= link_to "Destroy", books_path, class: "btn btn-danger", 'aria-hidden' => true, method: :delete, "data-confirm" => "本当に消しますか?" %>
            </div>
          </div>
        </div>
      </div>
      <!-- ↑ -->

    </div>
  </div>
</section>