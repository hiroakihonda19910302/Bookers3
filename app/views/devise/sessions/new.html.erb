<section class="slice slice-lg sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
        <div class="form-user">
          <div class="form-header text-left">
            <h2 class="form-header-title">Log in</h2>
          </div>
          <div class="form-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <label class="control-label" for="inputName">Name</label>
              <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName" %>
            </div>
            <div class="form-group">
              <label class="control-label" for="inputPassword">Password</label>
              <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword" %>
            </div>
            <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
            <% end %>
            <%= f.submit "Log in", class:"btn btn-primary btn-lg" %>
            <% end %>
          </div>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
