<section>
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <div class="form-group text-left">
          <h2>Log in</h2>
        </div>
        <div class="form-group">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <label class="control-label" for="inputName">Name</label>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", id:"inputName" %>
          </div>
          <div class="form-group">
            <label class="control-label" for="inputPassword">Password</label>
            <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword" %>
          </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <%= f.submit "Log in", class:"btn btn-primary btn-md" %>
          <% end %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
